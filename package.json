{
  "name": "the-road-to-next-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:deps": "concurrently --kill-others-on-fail --kill-others -n \"DB,STUDIO,STRIPE,INNGEST\" -c \"blue,yellow,magenta,cyan\" \"npm run db:start\" \"npm run prisma:studio\" \"npm run stripe:listen\" \"npm run inngest:dev\"",
    "dev:deps:safe": "npm run docker:ensure && npm run dev:deps",
    "dev:full": "concurrently --kill-others-on-fail --kill-others -n \"DB,NEXT,STUDIO,STRIPE,INNGEST\" -c \"blue,green,yellow,magenta,cyan\" \"npm run db:start\" \"npm run dev\" \"npm run prisma:studio\" \"npm run stripe:listen\" \"npm run inngest:dev\"",
    "dev:full:safe": "npm run docker:ensure && npm run dev:full",
    "dev:lite": "concurrently --kill-others-on-fail --kill-others -n \"DB,NEXT,STUDIO,INNGEST\" -c \"blue,green,yellow,cyan\" \"npm run db:start\" \"npm run dev\" \"npm run prisma:studio\" \"npm run inngest:dev\"",
    "dev:check": "npm run check && npm run db:start && npm run dev",
    "dev:minimal": "concurrently --kill-others-on-fail --kill-others -n \"DB,NEXT\" -c \"blue,green\" \"npm run db:start\" \"npm run dev\"",
    "db:start": "docker-compose up",
    "db:start:bg": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d && npm run db:push && npm run seed",
    "db:push": "npx prisma db push",
    "db:status": "docker-compose ps",
    "db:logs": "docker-compose logs -f postgres",
    "docker:ensure": "powershell -Command \"if (!(docker ps 2>$null)) { Write-Host 'üöÄ Starting Docker Desktop...'; Start-Process 'C:\\Program Files\\Docker\\Docker\\Docker Desktop.exe' -ErrorAction SilentlyContinue; Write-Host '‚è≥ Waiting for Docker to initialize (this takes 20-40 seconds)...'; Start-Sleep -Seconds 15 } else { Write-Host '‚úÖ Docker already running!' }; $timeout = 90; $elapsed = 0; while ((!(docker ps 2>$null)) -and ($elapsed -lt $timeout)) { Write-Host '‚è≥ Still waiting for Docker engine... ($elapsed/$timeout seconds)'; Start-Sleep -Seconds 3; $elapsed += 3 }; if (docker ps 2>$null) { Write-Host '‚úÖ Docker is fully ready!'; exit 0 } else { Write-Host '‚ùå Docker failed to start within $timeout seconds'; exit 1 }\"",
    "prisma:studio": "npx prisma studio",
    "inngest:dev": "npx inngest-cli@latest dev",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/stripe/webhook",
    "stripe:trigger:subscription": "stripe trigger customer.subscription.updated",
    "stripe:trigger:payment-failed": "stripe trigger invoice.payment_failed",
    "preflight": "run-s check db:status",
    "setup:verify": "node scripts/verify-setup.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "type": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "type:test": "tsc -p tsconfig.test.json --noEmit",
    "lint:test": "eslint src/**/*.test.{ts,tsx} src/test/**/*.{ts,tsx} e2e/**/*.spec.ts",
    "check": "npm run type && npm run type:test && npm run lint",
    "prebuild": "npm run type && npm run type:test",
    "postinstall": "prisma generate",
    "vercel-build": "node scripts/prisma-vercel-build.js && next build",
    "prisma-seed": "tsx prisma/seed.ts",
    "stripe-seed": "tsx src/lib/stripe/seed.ts",
    "seed": "npm run prisma-seed && npm run stripe-seed",
    "seed:reset": "npm run seed",
    "setup-mcp": "tsx scripts/setup-mcp.ts",
    "email": "email dev --dir src/emails",
    "mcp:ticketing": "tsx src/mcp-server-ticketing/index.ts",
    "test:vercel": "node scripts/test-vercel-build.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
